<h1>New Game</h1>

<div class='container'>
  <% @letters.each do | letter | %>
    <p class='letters'><%= letter %></p>
  <% end  %>
</div>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="word">What is the longest word you can find?</label>
  <input name="letters" type="hidden" value="<%= @letters.join %>" />
  <input type="text" id="word" name="word" placeholder="Select from Letters above">
  <input type="submit">
</form>
